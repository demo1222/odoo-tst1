<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_inventory_note_tree" model="ir.ui.view">
        <field name="name">inventory.note.tree</field>
        <field name="model">inventory.note</field>
        <field name="arch" type="xml">
            <tree default_order="date desc">
                <field name="name"/>
                <field name="date"/>
                <field name="warehouse_id"/>
                <field name="state" widget="badge" decoration-success="state == 'confirmed'" decoration-info="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_inventory_note_form" model="ir.ui.view">
        <field name="name">inventory.note.form</field>
        <field name="model">inventory.note</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '=', 'confirmed')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Note Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group>
                            <field name="note" placeholder="Enter your note here..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_inventory_notes" model="ir.actions.act_window">
        <field name="name">Inventory Notes</field>
        <field name="res_model">inventory.note</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_state': 'draft'}</field>
    </record>

    <!-- Menu Item under Inventory -->
    <menuitem id="menu_inventory_notes"
              name="Inventory Notes"
              parent="stock.menu_stock_root"
              action="action_inventory_notes"
              sequence="20"/>
</odoo>