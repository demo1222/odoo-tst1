<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Server action to trigger the method (from stock_picking_views.xml) -->
    <record id="action_generate_random_deliveries" model="ir.actions.server">
        <field name="name">Generate Random Deliveries</field>
        <field name="model_id" ref="stock.model_stock_picking"/>
        <field name="state">code</field>
        <field name="code">
# Call the function to fetch data from the local API
env['api.product'].fetch_and_store_api_data()

# Return a notification and redirect to the API Products list
action = {
    'type': 'ir.actions.act_window',
    'name': 'API Products',
    'res_model': 'api.product',
    'view_mode': 'tree,form',
    'target': 'current',
}
        </field>
    </record>

    <!-- Menu item for Random Deliveries (from stock_picking_views.xml) -->
    <menuitem id="menu_random_deliveries"
              name="Fetch data from API"
              parent="stock.menu_stock_root"
              action="action_generate_random_deliveries"
              sequence="15"/>

    <!-- Add button to Inventory form view's header (from stock_picking_views.xml) -->
    <record id="view_stock_picking_form_inherit_header" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.header</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_custom_button" 
                        string="Fetch API Data" 
                        type="object" 
                        class="btn-primary"
                        attrs="{'invisible': [('state', 'in', ['cancel', 'done'])]}"/>
            </xpath>
        </field>
    </record>

    <!-- API product views with button and status label -->
    <record id="view_api_product_tree" model="ir.ui.view">
        <field name="name">api.product.tree</field>
        <field name="model">api.product</field>
        <field name="arch" type="xml">
            <tree default_order="name">
                <field name="api_id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="design"/>
                <field name="fast_ship"/>
                <field name="quantity"/>
                <field name="email"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- Kanban view for API Products - Updated version -->
    <record id="view_api_product_kanban" model="ir.ui.view">
        <field name="name">api.product.kanban</field>
        <field name="model">api.product</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" 
                   quick_create="false" 
                   class="o_kanban_small_column" 
                   records_draggable="true"
                   on_create="quick_create"
                   column_order="all_products,processing,approving,not_approved,done"
                   groups_limit="5"
                   default_order="priority desc, name">
                <field name="api_id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="design"/>
                <field name="fast_ship"/>
                <field name="quantity"/>
                <field name="email"/>
                <field name="state"/>
                <field name="priority"/>
                <progressbar field="state" colors='{"all_products": "success", "processing": "info", "approving": "warning", "not_approved": "danger", "done": "muted"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <!-- Tags section -->
                                <div class="o_kanban_tags_section mt-1 mb-2">
                                    <span t-if="record.fast_ship.raw_value" class="badge rounded-pill text-bg-danger  me-1">
                                        <strong>Urgent</strong>
                                    </span>
                                    <span t-if="record.quantity.raw_value > 10" class="badge rounded-pill text-bg-warning  me-1">
                                        <strong>Bulk Order</strong>
                                    </span>
                                    <span t-if="record.design.raw_value" class="badge rounded-pill text-bg-primary  me-1">
                                        <strong>Custom</strong>
                                    </span>
                                </div>
                                <ul class="mt-2 ps-0" style="list-style-type: none;"> 
                                    <li>Design: <field name="design"/></li>
                                    <li>Date: <field name="date"/></li>
                                    <li>API ID: <field name="api_id"/></li>
                                    <li>Fast Ship: <field name="fast_ship"/></li>
                                    <li>Quantity: <field name="quantity"/></li>
                                    <li>Email: <field name="email"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="view_api_product_search" model="ir.ui.view">
        <field name="name">api.product.search</field>
        <field name="model">api.product</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="api_id"/>
                <field name="design"/>
                <field name="email"/>
                <filter string="Fast Ship" name="fast_ship" domain="[('fast_ship', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Design" name="groupby_design" context="{'group_by': 'design'}"/>
                    <filter string="Date" name="groupby_date" context="{'group_by': 'date'}"/>
                    <filter string="Fast Ship" name="groupby_fast_ship" context="{'group_by': 'fast_ship'}"/>
                    <filter string="Status" name="groupby_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="view_api_product_form" model="ir.ui.view">
        <field name="name">api.product.form</field>
        <field name="model">api.product</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" 
                           statusbar_visible="all_products,processing,approving,not_approved,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Product Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="api_id"/>
                            <field name="date"/>
                            <field name="fast_ship"/>
                        </group>
                        <group>
                            <field name="design"/>
                            <field name="quantity"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="action_view_api_products" model="ir.actions.act_window">
        <field name="name">API Products</field>
        <field name="res_model">api.product</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
    
    <!-- Multi-record action button for API Products -->
    <record id="action_create_delivery_from_api_products" model="ir.actions.server">
        <field name="name">Create Delivery Orders</field>
        <field name="model_id" ref="model_api_product"/>
        <field name="binding_model_id" ref="model_api_product"/>
        <field name="binding_view_types">list,kanban</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.create_delivery_orders()
        </field>
    </record>
    
    <menuitem id="menu_api_products"
              name="API Products"
              parent="stock.menu_stock_root"
              action="action_view_api_products"
              sequence="16"/>
</odoo>