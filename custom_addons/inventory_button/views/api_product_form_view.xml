<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_api_product_form" model="ir.ui.view">
        <field name="name">api.product.form</field>
        <field name="model">api.product</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': '1'}" 
                           statusbar_visible="all_products,processing,approving,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Product Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="api_id"/>
                            <field name="date"/>
                            <field name="fast_ship"/>
                            <field name="design_difficulty" widget="priority"/>
                        </group>
                        <group>
                            <field name="design"/>
                            <field name="quantity"/>
                            <field name="email"/>
                            <field name="priority"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
